<body>
  <header>
    <%-include("partials/navbar")-%>
  </header>

  </div>
  <div class="container">

    <form class="well form-horizontal" action="/signup" method="post" id="contact_form">
      <fieldset>

        <h2 class="heading ">
          </col>Registration Form</h2>

        <!-- Text input-->

        <div class="form-group">
          <label class="col-md-4 control-label">First Name</label>
          <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
              <input name="first_name" pattern="[A-Za-z]{1,20}" placeholder="First Name" class="form-control"
                type="text" required>
            </div>
          </div>
        </div>

        <!-- Text input-->

        <div class="form-group">
          <label class="col-md-4 control-label">Last Name</label>
          <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
              <input name="last_name" placeholder="Last Name" pattern="[A-Za-z]{1,20}" class="form-control" type="text"
                required>
            </div>
          </div>
        </div>

        <div class="form-group">
          <label class="col-md-4 control-label">Blood Group</label>
          <div class="col-md-4 selectContainer">
            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
              <select name="bloodGroup" class="form-control selectpicker" required>
                <option value="">Select your Blood Group</option>
                <option>A+</option>
                <option>A-</option>
                <option>B+</option>
                <option>B-</option>
                <option>O+</option>
                <option>O-</option>
                <option>AB+</option>
                <option>AB-</option>
              </select>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-4 control-label">Gender</label>
          <div class="col-md-4 selectContainer">
            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
              <select name="gender" class="form-control selectpicker" required>
                <option value="">Select Your Gender</option>
                <option>Male</option>
                <option>Female</option>
              </select>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-4 control-label">Date of Birth</label>
          <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
              <input name="dob" class="form-control" type="date" required max="2002-01-01">
            </div>
          </div>
        </div>

        <!-- Text input-->

        <div class="form-group">
          <label class="col-md-4 control-label">Username</label>
          <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
              <input name="user_name" placeholder="Username" class="form-control" type="text" required>
            </div>
          </div>
        </div>



        <!-- Text input-->
        <div class="form-group">
          <label class="col-md-4 control-label">E-Mail</label>
          <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
              <input name="email" placeholder="E-Mail Address" class="form-control" type="email" required>
            </div>
          </div>
        </div>



        <!-- Text input-->




        <div class="form-group">
          <label class="col-md-4 control-label">Password</label>
          <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
              <input name="user_password" placeholder="Password" class="form-control" id="password" type="password"
                minlength="8" required onkeyup="check();">
            </div>
          </div>
        </div>

        <!-- Text input-->

        <div class="form-group">
          <label class="col-md-4 control-label">Confirm Password</label>
          <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
              <input name="confirm_password" placeholder="Confirm Password" id="confirmPassword" class="form-control"
                type="password" required onkeyup="check();">
            </div>
          </div>
          <p id="message"> </p>
        </div>
        <script>
          var check = function () {
            if (document.getElementById('password').value === document.getElementById('confirmPassword').value) {
              document.getElementById('message').style.color = 'green';
              document.getElementById('message').innerHTML = 'Password Match';
            } else {
              document.getElementById('message').style.color = 'red';
              document.getElementById('message').innerHTML = 'Passwords do not match';
            }
          }
        </script>


        <!-- Text input-->

        <div class="form-group">
          <label class="col-md-4 control-label">Contact No.</label>
          <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-earphone"></i></span>
              <input name="contact_no" placeholder="(+91)" class="form-control" type="tel" pattern="[6-9]{1}[0-9]{9}"
                required>
            </div>
          </div>
        </div>

        <div class="form-group">
          <label class="col-md-4 control-label">Country</label>
          <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
              <input name="country" placeholder="India" disabled="" class="form-control" type="text" default="India">
            </div>
          </div>
        </div>



        <div class="form-group">
          <label class="col-md-4 control-label">State</label>
          <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
              <!-- <input name="state" class="form-control" type="text" required> -->
              <select name="state" class="form-control selectpicker" id="" required onchange="makeMenu(this.value)">
                <option value="" disabled selected>Choose State</option>
                <option value="Delhi">Delhi</option>
                <option value="UttarPradesh">Uttar Pradesh</option>
              </select>
            </div>
          </div>
        </div>





        <div class="form-group">
          <label class="col-md-4 control-label">City</label>
          <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
              <!-- <input name="city" class="form-control" type="text" required> -->
              <select name="city" class="form-control selectpicker" id="citySelect" required>
                <option value="" disabled selected>Choose City</option>
              </select>

            </div>
          </div>
        </div>
        <script>
          var citiesByState = {
            "Delhi": ["New Delhi", "West Delhi", "South Delhi"],
            "UttarPradesh": ["Noida", "Greater Noida", "Lucknow"]
          };

          console.log(citiesByState);
          function makeMenu(value) {
            var citiesOptions = "";
            console.log(citiesByState[value]);
            citiesByState[value].forEach((element) => {
              console.log(element);
              citiesOptions += "<option>" + element + "</option>";
            })
            document.getElementById("citySelect").innerHTML = citiesOptions;
          }
        </script>

        <div class="form-group">
          <label class="col-md-4 control-label">PIN</label>
          <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
              <input name="pin" pattern="[0-9]{6}" class="form-control" type="number" required>
            </div>
          </div>
        </div>


        <!-- Select Basic -->

        <!-- Success message -->
        <div class="alert alert-success" role="alert" id="success_message">Success <i
            class="glyphicon glyphicon-thumbs-up"></i> Success!.</div>

        <!-- Button -->
        <div class="form-group">
          <label class="col-md-4 control-label"></label>
          <div class="col-md-4 inputGroupContainer"><br>
            &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<button type="submit"
              class="btn btn-primary ">&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbspSUBMIT <span
                class="glyphicon glyphicon-send"></span>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</button>
          </div>
        </div>




      </fieldset>
    </form>
  </div>




